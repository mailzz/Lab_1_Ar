@model WebApplication2.Models.Sections
@{
    ViewBag.Title = "Добавление секции";
}
<form asp-action="Create"asp-controller="Sections">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Number" class="control-label">Количество человек</label>
         <input type="text" asp-for="Number" class="form-control" />
     </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default"/>
    </div>
</form>
