@model WebApplication2.Models.Groups
@{
    ViewBag.Title = "Добавление пользователи";
}
<form asp-action="Create"asp-controller="Groups">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="number" class="control-label">Количество</label>
         <input type="text" asp-for="number" class="form-control" />
     </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default"/>
    </div>
</form>
