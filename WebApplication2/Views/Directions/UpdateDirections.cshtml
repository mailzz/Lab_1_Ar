@model WebApplication2.Models.Directions
@{
    ViewBag.Title = "Update";
}
@{ var item = Model;}
<form asp-action="UpdateDirections" asp-controller="Directions">
    <div class="form-group">
        <label asp-for="group" class="control-label">Название</label>
        <input type="text" asp-for="group" class="form-control" value="@item.group" />
    </div>
    <div class="form-group">
        <label asp-for="nubmer" class="control-label">Часы</label>
        <input type="text" asp-for="nubmer" class="form-control" value="@item.nubmer" />
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>

</form>